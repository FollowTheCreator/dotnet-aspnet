@model Profile

<div class="mt-3">
    <h2>Update</h2>
</div>

<form asp-action="UpdateProfile" asp-controller="Profile" class="form-group mx-auto w-25">
    <br>
    <div>
        <div>
            <label asp-for="Id">Id</label><br />
            <input type="text" asp-for="Id" class="form-control" value="@Model.Id" readonly />
        </div>
        <br>
        <div>
            <label asp-for="Name">Name</label><br />
            <input type="text" asp-for="Name" class="form-control" value="@Model.Name" />
        </div>
        <br>
        <div>
            <label asp-for="LastName">LastName</label><br />
            <input type="text" asp-for="LastName" class="form-control" value="@Model.LastName" />
        </div>
        <br />
        <div class="text-center">
            <input type="submit" value="Update" class="btn btn-outline-secondary w-100 mt-5" />
        </div>
    </div>
</form>