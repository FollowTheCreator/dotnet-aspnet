@model Profile

<div class="mt-3">
    <h2>Add Profile</h2>
</div>

<form asp-action="AddProfile" asp-controller="Profile" class="form-group mx-auto w-25">
    <br>
    <div>
        <div>
            <label asp-for="Name">Name</label><br />
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <br>
        <div>
            <label asp-for="LastName">LastName</label><br />
            <input type="text" asp-for="LastName" class="form-control" />
        </div>
        <br />
        <div class="text-center">
            <input type="submit" value="Add" class="btn btn-outline-secondary w-100 mt-5" />
        </div>
    </div>
</form>