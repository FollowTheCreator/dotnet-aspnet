@model PermissionsAttribute.WebUI.Models.ViewModels.Authentication.LoginModel

<div class="mt-3">
    <h2>Log In</h2>
</div>

<form asp-action="LogIn" asp-controller="Account" asp-anti-forgery="true" class="form-group mx-auto w-25">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <br>
    <div>
        <div>
            <label asp-for="Email">Email</label><br />
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <br>
        <div>
            <label asp-for="Password">Password</label><br />
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <br />
        <div>
            <input type="submit" value="Login" class="btn btn-outline-secondary w-100 mt-5" />
        </div>
        <a asp-action="Register" asp-controller="Account">Register</a>
    </div>
</form>
