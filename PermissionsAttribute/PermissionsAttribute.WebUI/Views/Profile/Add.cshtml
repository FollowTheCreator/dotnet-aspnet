@model PermissionsAttribute.WebUI.Models.ViewModels.AddProfileModel

<h2>Add Profile</h2>

<form asp-action="AddProfile" asp-controller="Profile" asp-anti-forgery="true" class="form-group">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <br>
    <div>
        <div>
            <label asp-for="Name">Name</label><br />
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Email">Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password">Password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Confirm Password</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <br />
        <div>
            <input type="submit" value="Add" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>